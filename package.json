{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "scripts": {
    "build": "lerna run build",
    "publish": "lerna publish from-git --yes",
    "version": "lerna version patch --yes",
    "changed": "lerna changed",
    "show": "lerna list",
    "vuepage": "lerna exec --scope vuepage yarn serve",
    "serve": "lerna exec --scope @beeweb/logger-server yarn serve",
    "watch": "lerna exec --scope @beeweb/logger yarn watch",
    "init:install": "lerna bootstrap"
  }
}